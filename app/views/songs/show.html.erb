
<%= javascript_include_tag "player/jquery.jplayer.min.js" %>

 <script type="text/javascript">
    $(document).ready(function(){
      $("#jquery_jplayer_1").jPlayer({
        ready: function () {
          $(this).jPlayer("setMedia", {
          	mp3: "/songs/<%=@song.id%>/music/"
          });
        },
        swfPath: "/javascripts/player",
        supplied: "mp3"
      });
    });
  </script>


<p id="notice"><%= notice %></p>


<p>
  <b>Id:</b>
  <%= @song.id %>
</p>

<p>
  <b>Name:</b>
  <%= @song.name %>
</p>

<div
<a href="http://localhost:3000/songs/song.mp3">http://localhost:3000/songs/song.mp3</a>
</div>
<p>
	 <div id="jquery_jplayer_1" class="jp-jplayer"></div>
  <div class="jp-audio">
